<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/mixer"
        android:layout_width="192dp"
        android:layout_height="179dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:id="@+id/imageView12"
        app:layout_constraintHorizontal_bias="0.58"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"/>

    <TextView
        android:text="KitchenAid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:text="KitchenAid KSM 150PSER 5-Qt. Artisan Series with Pouring Shield - Empire Red"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_width="360dp"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintTop_toBottomOf="@+id/textView8"/>

    <RatingBar
        android:layout_width="244dp"
        android:id="@+id/ratingBar"
        app:layout_constraintLeft_toLeftOf="@+id/textView9"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar"
        android:numStars="5"
        android:rating="4.25"
        app:layout_constraintTop_toBottomOf="@+id/textView9"/>

    <TextView
        android:text="(3,668)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/ratingBar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"/>


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton"
            android:buttonTint="#000000"
            android:checked="true"
            app:layout_constraintTop_toTopOf="@+id/radioButton3"
            app:layout_constraintRight_toLeftOf="@+id/radioButton3"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView12"/>
       <RadioButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/radioButton2"
           app:layout_constraintTop_toTopOf="@+id/radioButton3"
           app:layout_constraintRight_toRightOf="@+id/imageView12"
           android:layout_marginStart="8dp"
           app:layout_constraintLeft_toRightOf="@+id/radioButton3"
           android:layout_marginLeft="8dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView12"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintHorizontal_bias="0.54"/>

    <TextView
        android:text="Sale:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        app:layout_constraintRight_toRightOf="@+id/textView12"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12"/>

    <TextView
        android:text="You Save:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintRight_toRightOf="@+id/textView11"/>

    <TextView
        android:text="Price: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        app:layout_constraintRight_toLeftOf="@+id/imageView12"
        app:layout_constraintTop_toBottomOf="@+id/radioButton3"
        android:layout_marginTop="8dp"/>

    <TextView
        android:text="469.99"
        android:alpha="0.25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView12"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView12"/>

    <TextView
        android:text="$210.00 (45%)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textColor="#671c1c"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView13"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView13"/>

    <TextView
        android:text="259.99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:textColor="#671c1c"
        app:layout_constraintTop_toTopOf="@+id/textView11"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView11"
        android:layout_marginLeft="8dp"/>

</android.support.constraint.ConstraintLayout>