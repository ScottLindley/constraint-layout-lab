<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
             xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="#676767">

    <ImageView
        android:layout_width="0dp"
        app:srcCompat="@drawable/jackson_5_album"
        android:id="@+id/imageView3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"/>

    <TextView
        android:text="Playing from Playlist\nSoul Music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        android:layout_marginTop="8dp"
        />

    <ImageView
        android:src="@drawable/ic_keyboard_arrow_down_white_18dp"
        android:layout_width="51dp"
        android:layout_height="36dp"
        android:id="@+id/imageButton"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/textView7"/>

    <ImageView
        android:src="@drawable/ic_view_headline_white_18dp"
        android:layout_width="38dp"
        android:layout_height="33dp"
        android:id="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"/>

    <ImageView
        android:layout_width="46dp"
        android:layout_height="38dp"
        app:srcCompat="@drawable/ic_add_circle_outline_white_18dp"
        android:id="@+id/imageView5"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"/>

    <ImageView
        app:srcCompat="@drawable/ic_add_circle_outline_white_18dp"
        android:id="@+id/imageView6"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:layout_width="46dp"
        android:layout_height="38dp"/>

    <SeekBar
        android:layout_height="19dp"
        tools:layout_editor_absoluteY="314dp"
        android:id="@+id/seekBar"
        app:layout_constraintRight_toLeftOf="@+id/imageView6"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        android:layout_marginLeft="8dp"
        android:layout_width="0dp"/>

    <ImageView
        android:layout_width="116dp"
        android:layout_height="114dp"
        app:srcCompat="@drawable/ic_pause_circle_outline_white_36dp"
        android:id="@+id/imageView7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        app:srcCompat="@drawable/ic_skip_previous_white_36dp"
        android:id="@+id/imageView8"
        app:layout_constraintRight_toLeftOf="@+id/imageView7"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        android:layout_marginTop="32dp"/>

    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        app:srcCompat="@drawable/ic_skip_next_white_36dp"
        android:id="@+id/imageView9"
        app:layout_constraintLeft_toRightOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="8dp"/>

    <ImageView
        app:srcCompat="@drawable/ic_shuffle_white_36dp"
        android:id="@+id/imageView10"
        app:layout_constraintLeft_toLeftOf="@+id/imageView5"
        app:layout_constraintRight_toLeftOf="@+id/imageView8"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.06"
        android:layout_marginTop="16dp"
        android:layout_width="36dp"
        android:layout_height="36dp"/>

    <ImageView
        app:srcCompat="@drawable/ic_repeat_white_36dp"
        android:id="@+id/imageView11"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:layout_constraintRight_toRightOf="@+id/imageView6"
        android:layout_marginTop="16dp"
        />
</android.support.constraint.ConstraintLayout>